### Create Auth token
# https://restful-booker.herokuapp.com/apidoc/index.html
# curl -X POST
#  https://restful-booker.herokuapp.com/auth
#  -H 'Content-Type: application/json'
#  -d '{
#    "username" : "admin",
#    "password" : "password123"
#}'
POST {{host}}/auth
Content-Type: application/json

{
  "username": "admin",
  "password": "password123"
}

### Get all Bookins IDs
# curl -i https://restful-booker.herokuapp.com/booking
GET {{host}}/booking

### Get Booking by ID
# curl -i https://restful-booker.herokuapp.com/booking/485
GET {{host}}/booking/242
Accept: application/json

### Create a Booking
# curl -X POST
#  https://restful-booker.herokuapp.com/booking
#  -H 'Content-Type: application/json'
#  -d '{
#    "firstname" : "Jim",
#    "lastname" : "Brown",
#    "totalprice" : 111,
#    "depositpaid" : true,
#    "bookingdates" : {
#        "checkin" : "2018-01-01",
#        "checkout" : "2019-01-01"
#    },
#    "additionalneeds" : "Breakfast"
#}'
POST {{host}}/booking
Content-Type: application/json
Accept: application/json

{
  "firstname": "Douglas",
  "lastname": "Fugazi",
  "totalprice": 111,
  "depositpaid": true,
  "bookingdates": {
    "checkin": "2023-04-19",
    "checkout": "2023-04-27"
  },
  "additionalneeds": "Breakfast"
}

### Update an existing Booking
# curl -X PUT
#  https://restful-booker.herokuapp.com/booking/6608
#  -H 'Content-Type: application/json'
#  -H 'Accept: application/json'
#  -H 'Cookie: token=abc123'
#  -d '{
#    "firstname" : "James",
#    "lastname" : "Brown",
#    "totalprice" : 111,
#    "depositpaid" : true,
#    "bookingdates" : {
#        "checkin" : "2018-01-01",
#        "checkout" : "2019-01-01"
#    },
#    "additionalneeds" : "Breakfast"
#}'
PUT {{host}}/booking/242
Accept: application/json
Cookie: token={{auth_token}}
Content-Type: application/json

{
  "firstname": "James",
  "lastname": "Brown",
  "totalprice": 111,
  "depositpaid": true,
  "bookingdates": {
    "checkin": "2018-01-01",
    "checkout": "2019-01-01"
  },
  "additionalneeds": "Breakfast"
}

### Update a partial Booking
# curl -X PATCH
#  https://restful-booker.herokuapp.com/booking/1
#  -H 'Content-Type: application/json'
#  -H 'Accept: application/json'
#  -H 'Cookie: token=abc123'
#  -d '{
#    "firstname" : "James",
#    "lastname" : "Brown"
#}'
PATCH {{host}}/booking/242
Accept: application/json
Cookie: token={{auth_token}}
Content-Type: application/json

{
  "firstname": "Shakira",
  "lastname": "Simpson"
}

### Delete a Booking by ID
# curl -X DELETE
#  https://restful-booker.herokuapp.com/booking/1
#  -H 'Content-Type: application/json'
#  -H 'Cookie: token=abc123'
DELETE {{host}}/booking/242
Cookie: token={{auth_token}}
Content-Type: application/json

